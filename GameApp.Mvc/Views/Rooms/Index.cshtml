<div class="rooms">
	<div class="rooms__header">
		<button
			class="btn"
			data-bs-toggle="modal"
			data-bs-target="#createModal"
		>
			Создать
		</button>
		<input
			class="input"
			type="text"
			placeholder="Поиск"
		/>
	</div>
	<div class="rooms__items"></div>
</div>

<div
	id="createModal"
	class="modal"
	tabindex="-1"
>
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Создание комнаты</h5>
				<button
					type="button"
					class="btn-close btn-close-white"
					data-bs-dismiss="modal"
					aria-label="Close"
				></button>
			</div>
			<div class="modal-body">
				<div class="modal-body__name item">
					<label for="">Название</label>
					<input
						id="roomName"
						class="input"
						type="text"
						placeholder="Название комнаты"
					/>
				</div>
				<div class="contact__password item">
					<label for="">Пароль</label>
					<input
						id="roomPassword"
						class="input"
						type="text"
						placeholder="Введите пароль"
					/>
				</div>
			</div>
			<div class="modal-footer">
				<button
					id="createRoom"
					type="button"
					class="btn btn-primary"
				>
					Сохранить
				</button>
			</div>
		</div>
	</div>
</div>

<div
	id="roomModal"
	class="modal"
	tabindex="-1"
>
	<div class="modal-dialog modal-xl">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Комната</h5>
				<button
					type="button"
					class="btn-close btn-close-white"
					data-bs-dismiss="modal"
					aria-label="Close"
				></button>
			</div>
			<div class="modal-body">
				<div class="room">
					<div class="room__players">
						<div 
							class="room-player" 
							id="player">
							<div class="room-player__avatar">
								<img
									class="room-player__logo"
									src="/img/gambler.ico"
									alt=""
								/>
							</div>
							<div
								id="playerNickname"
								class="room-player__nickname">
								Nick
							</div>
						</div>

						<img
							class="room-player__vs"
							src="/img/vs.ico"
							alt=""
						/>

						<div 
							class="room-player" 
							id="opponent">
							<div class="room-player__avatar">
								<img
									class="room-player__logo"
									src="/img/zhdun.ico"
									alt=""
								/>
							</div>
							<div
								id="opponentNickname"
								class="room-player__nickname">
								Jack
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
<script
	src="~/js/views/rooms/index.js"
	asp-append-version="true"
	type="module"
></script>
}
